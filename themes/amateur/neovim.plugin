return {
  name = "amateur",
  dir = vim.fn.expand("~/.config/hypr/current/theme"),
  lazy = false,
  priority = 1000,
  config = function()
    -- Explicitly load the local colorscheme file
    local color_file = vim.fn.expand("~/.config/hypr/current/theme/colors/amateur.lua")
    if vim.fn.filereadable(color_file) == 1 then
      dofile(color_file)
      vim.cmd.colorscheme("amateur")
    else
      -- Fallback if something goes wrong
      vim.cmd.colorscheme("habamax")
    end
  end,
}
