#!/bin/bash
#
# Restarts the 'walker' application launcher and its 'elephant' service.

set -euo pipefail

#######################################
# Main function to restart walker and elephant.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  echo "Restarting walker and elephant services..."

  # Kill existing processes.
  pkill walker || true
  pkill elephant || true

  # Start new instances in the background.
  setsid walker --gapplication-service &
  setsid elephant &

  echo "Walker and elephant restarted."
}

main
