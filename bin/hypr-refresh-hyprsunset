#!/bin/bash
#
# Refreshes the hyprsunset configuration and restarts the service.

set -euo pipefail

#######################################
# Main function to refresh the hyprsunset configuration.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  hypr-refresh-config hypr/hyprsunset.conf
  hypr-restart-hyprsunset
}

main
