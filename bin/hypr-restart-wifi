#!/bin/bash
#
# Unblocks the Wi-Fi hardware kill switch and lists the status.

set -euo pipefail

#######################################
# Main function to unblock and list Wi-Fi devices.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  if ! command -v rfkill &>/dev/null; then
    echo "Error: 'rfkill' command not found." >&2
    exit 1
  fi

  echo "Unblocking Wi-Fi..."
  rfkill unblock wifi

  echo "Current Wi-Fi status:"
  rfkill list wifi
}

main
