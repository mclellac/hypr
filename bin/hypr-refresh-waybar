#!/bin/bash
#
# Refreshes the waybar configuration and restarts the service.

set -euo pipefail

#######################################
# Main function to refresh the waybar configuration.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  hypr-refresh-config waybar/config.jsonc
  hypr-refresh-config waybar/style.css
  hypr-restart-waybar
}

main
