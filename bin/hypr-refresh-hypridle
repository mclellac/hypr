#!/bin/bash
#
# Refreshes the hypridle configuration and restarts the service.

set -euo pipefail

#######################################
# Main function to refresh the hypridle configuration.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  hypr-refresh-config hypr/hypridle.conf
  hypr-restart-hypridle
}

main
