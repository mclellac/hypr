#!/bin/bash
#
# Toggles the Waybar panel on and off.

set -euo pipefail

#######################################
# Main function to toggle Waybar.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  if pgrep -x waybar >/dev/null; then
    pkill -x waybar
  else
    setsid uwsm app -- waybar >/dev/null 2>&1 &
  fi
}

main
