#!/bin/bash
#
# Refreshes the walker configuration and restarts the service.

set -euo pipefail

#######################################
# Main function to refresh the walker configuration.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  hypr-refresh-config walker/config.toml
  hypr-restart-walker
}

main
