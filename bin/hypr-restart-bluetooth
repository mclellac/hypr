#!/bin/bash
#
# Unblocks the Bluetooth hardware kill switch and lists the status.

set -euo pipefail

#######################################
# Main function to unblock and list Bluetooth devices.
# Globals:
#   None
# Arguments:
#   None
# Outputs:
#   None
#######################################
main() {
  if ! command -v rfkill &>/dev/null; then
      echo "Error: 'rfkill' command not found." >&2
      exit 1
  fi

  echo "Unblocking Bluetooth..."
  rfkill unblock bluetooth

  echo "Current Bluetooth status:"
  rfkill list bluetooth
}

main
