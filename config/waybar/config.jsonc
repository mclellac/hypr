{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------
    "layer": "top",
    // If height property would be not present, it'd be calculated dynamically
    "height": 30,
    "position": "top",
    "modules-left": [
        "custom/hypr",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/submap",
        "group/datetime"
    ],
    "modules-right": [
        // informational
        "custom/update",
        "custom/clipboard",
        "privacy",
        // hardware group
        "group/hardware",
        // media
        "custom/playerctl",
        "backlight",
        // system
        "tray",
        "custom/power"
    ],
    // -------------------------------------------------------------------------
    // Grouping
    // -------------------------------------------------------------------------
    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
            "disk",
            "temperature",
            "battery",
            "pulseaudio",
            "network"
        ]
    },
    "group/datetime": {
        "orientation": "horizontal",
        "modules": [
            "clock",
            "custom/weather"
        ]
    },
    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------
    "custom/hypr": {
        "class": "hypr",
        "format": "󰚌 ",
        "on-click": "hyprctl dispatch exec hypr-menu",
        "tooltip-format": "Hypr Menu\n\nSuper + Alt + Space"
    },
    "hyprland/workspaces": {
        "class": "workspaces",
        "on-click": "activate",
        "format": "{name}",
        "persistent-workspaces": {
            "*": 3
        }
    },
    "battery": {
        "interval": 30,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format-charging": "󰂄 {capacity}%",
        "format": "{icon} {capacity}%",
        "format-icons": [
            "󱃍",
            "󰁺",
            "󰁼",
            "󰁽",
            "󰁾",
            "󰁿",
            "󰂀",
            "󰂁",
            "󰂂",
            "󰁹"
        ],
        "tooltip": true,
        "tooltip-format": "{timeTo}\nPower: {power}W"
    },
    "clock": {
        "interval": 60,
        "format": "{:%e %b %Y %H:%M}",
        "tooltip": true,
        "tooltip-format": "<tt>{calendar}</tt>"
    },
    "cpu": {
        "interval": 10,
        "format": "󰘚",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "hyprctl dispatch exec \"hypr-exec btop\"",
        "tooltip": true
    },
    "memory": {
        "interval": 10,
        "format": "󰍛",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "hyprctl dispatch exec \"hypr-exec btop\"",
        "tooltip": true
    },
    "disk": {
        "interval": 30,
        "format": "󰋊 {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "tooltip-format": "{used} used out of {total} on {path} ({percentage_used}%)",
        "on-click": "hyprctl dispatch exec \"hypr-exec btop\""
    },
    "network": {
        "interval": 5,
        "format-wifi": "{icon} {bandwidthDownBytes}  {bandwidthUpBytes} ",
        "format-ethernet": "󰈀 {bandwidthDownBytes}  {bandwidthUpBytes} ",
        "format-disconnected": "󰖪",
        "format-disabled": "󰀝",
        "format-icons": [
            "󰤯",
            "󰤟",
            "󰤢",
            "󰤥",
            "󰤨"
        ],
        "tooltip-format": "{icon} {ifname}: {ipaddr}",
        "tooltip-format-ethernet": "{icon} {ifname}: {ipaddr}",
        "tooltip-format-wifi": "{icon} {ifname} ({essid}): {ipaddr}",
        "tooltip-format-disconnected": "{icon} disconnected",
        "tooltip-format-disabled": "{icon} disabled",
        "on-click": "hyprctl dispatch exec \"hypr-exec nmtui\""
    },
    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>",
        "tooltip": false
    },
    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": [
            "󰃞",
            "󰃟",
            "󰃠"
        ]
    },
    "pulseaudio": {
        "class": "pulseaudio",
        "format": "{icon}",
        "on-click": "hyprctl dispatch exec \"alacritty --class=Wiremix -e wiremix\"",
        "on-click-right": "pamixer -t",
        "tooltip-format": "Playing at {volume}%",
        "scroll-step": 5,
        "format-muted": "󰝟",
        "format-icons": {
            "default": ["", "", ""]
        }
    },
    "temperature": {
        "critical-threshold": 90,
        "interval": 5,
        "format": "{icon}",
        "tooltip-format": "{temperatureC}°C",
        "format-icons": [
            "",
            "",
            ""
        ],
        "tooltip": true,
        "on-click": "hyprctl dispatch exec \"hypr-exec 'watch sensors'\""
    },
    "tray": {
        "icon-size": 21,
        "spacing": 5
    },
    "custom/playerctl": {
        "format": "{icon} <span>{}</span>",
        "return-type": "json",
        "max-length": 50,
        "exec": "playerctl metadata --format '{\"text\": \"{{artist}} - {{title}}\", \"alt\": \"{{status}}\", \"tooltip\": \"{{playerName}}: {{markup_escape(title)}} - {{markup_escape(artist)}}\"}'",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl position 10+",
        "on-scroll-down": "playerctl position 10-",
        "signal": 5,
        "format-icons": {
            "Playing": "<span>󰎇</span>",
            "Paused": "󰐍"
        }
    },
    "custom/clipboard": {
        "format": "󰨸",
        "interval": "once",
        "return-type": "json",
        "on-click": "hyprctl dispatch exec \"walker --provider clipboard\"",
        "on-click-middle": "rm -f ~/.cache/cliphist/db; pkill -RTMIN+9 waybar",
        "exec": "printf '{\"tooltip\":\"%s item(s) in the clipboard\\r(Mid click to clear)\"}' $(cliphist list | wc -l)",
        "exec-if": "[ -x \"$(command -v cliphist)\" ] && [ $(cliphist list | wc -l) -gt 0 ]",
        "signal": 9
    },
    "custom/update": {
        "class": "update",
        "exec": "arch-update",
        "on-click": "hyprctl dispatch exec \"hypr-exec hypr-update\"",
        "return-type": "json",
        "interval": 1000
    },
    "custom/weather": {
        "class": "weather",
        "exec": "hypr-weather",
        "return-type": "json",
        "format": "{}",
        "interval": 900,
        "tooltip": true
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 21,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ]
    },
    "custom/power": {
        "format": "⏻",
        "on-click": "hyprctl dispatch exec hypr-power-menu",
        "tooltip": true,
        "tooltip-format": "Power Menu"
    }
}
